@model SP2023_Assignment3_sriddle.Models.CastVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Movie Role</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Cast.Id" />
            <div class="form-group">
                <label asp-for="Cast.MovieId" class="control-label"></label>
                <select asp-for="Cast.MovieId" class="form-control" asp-items="Model.MovieNames"></select>
                <span asp-validation-for="Cast.MovieId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cast.ActorId" class="control-label"></label>
                <select asp-for="Cast.ActorId" class="form-control" asp-items="Model.ActorNames"></select>
                <span asp-validation-for="Cast.ActorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cast.CharacterName" class="control-label"></label>
                <input asp-for="Cast.CharacterName" class="form-control" />
                <span asp-validation-for="Cast.CharacterName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
