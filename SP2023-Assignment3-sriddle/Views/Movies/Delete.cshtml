@model SP2023_Assignment3_sriddle.Models.Movie

@{
    ViewData["Title"] = "Delete " + Model.Title;
}

<h1>Delete @Model.Title</h1>
<br />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            IMDB Link
        </dt>
        <dd class = "col-sm-10">
            <a target="_blank" href="@Model.IMDBLink">View on IMDB</a>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class = "col-sm-2">
            Release Year
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReleaseYear)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Poster)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Poster != null)
            {
                <img src="@Url.Action("GetMoviePoster","Movies",new {Model.Id})" alt="Photo" width="100" height="100" />
            }
        </dd>
    </dl>
    <div class="col-md-4">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete @Model.Title?" class="btn btn-danger" />
            <br /><br />
            &larr; <a class="back-anchor" asp-action="Index">Back to Movie List</a>
        </form>
    </div>

</div>
