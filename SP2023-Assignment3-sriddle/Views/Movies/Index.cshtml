@model IEnumerable<SP2023_Assignment3_sriddle.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<h1>Movies</h1>
<br />
<p>
    <a class="generic-anchor" asp-action="Create">Add a New Movie</a>
</p>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                IMDB Link
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                Release Year
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Poster)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <a target="_blank" href="@item.IMDBLink">View on IMDB</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseYear)
            </td>
            <td>
                @if (item.Poster != null)
                {
                    <img src="@Url.Action("GetMoviePoster","Movies",new {item.Id})" alt="Poster" width="100" height="100" />
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                <a asp-action="Analyze" asp-route-id="@item.Id">Analyze Tweets</a>
            </td>
        </tr>
}
    </tbody>
</table>
