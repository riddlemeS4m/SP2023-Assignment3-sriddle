@model SP2023_Assignment3_sriddle.Models.TweetsVM

@{
    ViewData["Title"] = "Analyze";
}

<h1>Analyze</h1>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Average)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Average)
        </dd>
    </dl>
</div>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Tweets[0].Tweet)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tweets[0].Sentiment)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Tweets)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tweet)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sentiment)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
