@model SP2023_Assignment3_sriddle.Models.Actor

@{
    ViewData["Title"] = Model.Name + "'s Details";
}

<h1>@Model.Name's Details</h1>
<br />
<p>
    <a class="generic-anchor" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
</p>
<br />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class = "col-sm-2">
            IMDB Link
        </dt>
        <dd class = "col-sm-10">
            <a target="_blank" href="@Model.IMDBLink">View on IMDB</a>
        </dd>
        <dt class="col-sm-2" style="vertical-align: middle;">
            @Html.DisplayNameFor(model => model.Photo)
        </dt>
        <dd class="col-sm-10" >
            @if (Model.Photo != null)
            {
                <img src="@Url.Action("GetActorPhoto","Actors",new {Model.Id})" alt="Photo" width="100" height="100" />
            }
        </dd>
    </dl>
</div>
<div>
    <br />
    &larr; <a class="back-anchor" asp-action="Index">Back to Actor List</a>
</div>
